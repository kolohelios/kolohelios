.col.m6.hide-on-small-only.center
  .row
    .col.s2
      a.photomedbuttons.waves-effect.waves-light.btn.z-depth-2(ng-class='{disabled: imgarray.length < 2}' ng-click='changeImage("last")')
        i.mdi-navigation-arrow-back.large
    .col.s8
      figure
        figcaption: h5 {{imgarray[imageIndex][1]}}
        img.materialboxed.responsive-img.z-depth-2(ng-src='{{imgarray[imageIndex][0]}}')
    .col.s2
      a.photomedbuttons.waves-effect.waves-light.btn.z-depth-2(ng-class='{disabled: imgarray.length < 2}' ng-click='changeImage("next")')
        i.mdi-navigation-arrow-forward.large
.col.s12.m6.hide-on-med-and-up.center
  .row
    .col.s12
      figure
        figcaption: h5 {{imgarray[imageIndex][1]}}
        img.projectimage.responsive-img.z-depth-2(ng-src='{{imgarray[imageIndex][0]}}')
  .row
    a.waves-effect.waves-light.btn.z-depth-2(ng-click='changeImage("last")' ng-show='imgarray.length > 1')
      i.mdi-navigation-arrow-back.large
    span &nbsp;&nbsp;&nbsp;
    a.waves-effect.waves-light.btn.z-depth-2(ng-click='changeImage("next")' ng-show='imgarray.length > 1')
      i.mdi-navigation-arrow-forward.large
