.section.projectshow
  .row
    .col.s12.center
      .row.valign-wrapper.hide-on-small-only
        .col.s3.center
          a.pagebutton.waves-effect.waves-light.btn.valign.z-depth-3(ng-click='changeProject("last")')
            i.mdi-navigation-arrow-back.large
            span.white-text.hide-on-small-only PREVIOUS
        .col.s6.center
          h2.valign {{project.name}}
        .col.s3.center
          a.pagebutton.waves-effect.waves-light.btn.valign.z-depth-3(ng-click='changeProject("next")')
            span.white-text.hide-on-small-only NEXT &nbsp;
            i.mdi-navigation-arrow-forward.large
      .row.hide-on-med-and-up
        .row
          h2 {{project.name}}
        .row
          a.pagebutton.waves-effect.waves-light.btn.z-depth-3(ng-click='changeProject("last")')
            i.mdi-navigation-arrow-back.large
            span.white-text.hide-on-small-only PREVIOUS
          span &nbsp;&nbsp;&nbsp;
          a.pagebutton.waves-effect.waves-light.btn.z-depth-3(ng-click='changeProject("next")')
            span.white-text.hide-on-small-only NEXT &nbsp;
            i.mdi-navigation-arrow-forward.large
      .row
        h4.flow-text {{project.desc}}
  .row
    div(je-img-slider imgarray='project.images')
    .col.s12.m6
      p.flow-text {{project.extddesc}}
    .col.s12.m6
      p Technologies:
      ul
        li(ng-repeat='tech in project.techs | orderBy: tech') {{tech}}
      p Role: {{project.role}}
      p: a(ng-href='{{project.linkToApp}}') {{project.linkText}}
      p: a(ng-href='{{project.linkToRepo}}') Link to Github repository
